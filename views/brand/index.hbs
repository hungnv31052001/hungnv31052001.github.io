<center>
   <a class="btn btn-primary" href="/brand/add">Add new brand</a>
   <a class="btn btn-success" href="/brand/deleteall"
      onclick="return confirm('Are you sure to delete all types ?');">Delete all brands</a>
</center>
<br>

<div class="container col-md-6">
   <table class="table table-striped">
      <tr>
         <th>Brand Name</th>
         <th>Actions</th>
      </tr>
      {{#each brandList }}
      <tr>
         <td>{{ name }}</td>
         <td>
            <a class="btn btn-success" href="/brand/edit/{{ _id }}">Edit</a>
            <a class="btn btn-success" href="/brand/delete/{{ _id }}" onclick="return confirm('Do you want to delete this brand ?');">Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>