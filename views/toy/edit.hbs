<div class="container text-center col-md-6">
   <form action="/toy/edit/{{toy._id}}" method="post">
   <h1>Edit Toy</h1>
   <label for="">Name</label><br>
   <input type="text" name="name"
   value="{{ toy.name }}"><br><br>
   <label for="">Type</label><br>
   <select name="type" id="">
      {{#each types }}
      <option value="{{ _id }}">{{ name }}</option>
      {{/each}}
    </select>
    <br><br>
   <label for="">Price</label><br>
   <input type="text" name="price"
   value="{{ toy.price }}"><br><br>
   <label for="">Illustration</label><br>
   <input type="url" name="illustration"
   value="{{ toy.illustration }}"><br><br>
   <label for="">Year Of Manufacture</label><br>
   <input type="number" name="yearManufacture" min="2000" max="2024"
   value="{{ toy.yearManufacture }}"><br><br>
   <input type="submit" value="Edit">
</form>
</div>