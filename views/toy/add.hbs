<div class="container text-center col-md-6">
  <form action="/toy/add" method="post">
    <h1 class="text text-primary text-uppercase">Add new toy</h1>

    <label for="">Name</label><br>
    <input class="form-control"type="text" name="name"><br><br>
    <label for="">Year Of Manufacture</label><br>
    <input class="form-control" type="number" name="yearManufacture" min="2000" max="2024"><br><br>
    <label for="">Price</label><br>
    <input class="form-control" type="number" name="price"><br><br>
    <label for="">Illustration</label><br>
    <input class="form-control" type="url" name="illustration"><br><br>
    <label for="">Type</label><br>
    <select name="type" id="">
      {{#each types }}
      <option value="{{ _id }}">{{ name }}</option>
      {{/each}}
    </select>
    <br><br>
    <label for="">Brand</label><br>
    <select name="brand" id="">
      {{#each brands }}
      <option value="{{ _id }}">{{ name }}</option>
      {{/each}}
    </select>
    <br><br>
    <input type="submit" value="Add">
  </form>
</div>