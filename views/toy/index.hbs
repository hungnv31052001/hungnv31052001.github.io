<center>
   <a class="btn btn-primary" href="/toy/add">Add new toy</a>
   <a class="btn btn-success" href="/toy/deleteall"
      onclick="return confirm('Are you sure to delete all toys ?');">Delete all toys</a>
</center>
<br>
<div class="">
   <div class="">
      <form action="/toy/search" method="post">
         <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by name...">
      </form>
   </div>
   <br>
   <div class="">
      <a class="btn btn-outline-dark" href="/toy/sortprice/asc">
         Sort By Price
      </a>
   </div>
   <br>
</div>
<table class="table table-striped">
   <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Year Of Manufacture</th>
      <th>Price</th>
      <th>Illustration</th>
      <th>Actions</th>
   </tr>
   {{#each toyList }}
   <tr>
      <td>{{ name }}</td>
      <td>
         {{ type.name }}
      </td>
        <td>{{ yearManufacture }}</td>
        <td>{{ price }}</td>
      <td>
         <a href="/toy/detail/{{ _id }}">
            <img src="{{ illustration }}" width="100" height="100">
         </a>
      </td>
      <td>
         <a class="btn btn-success" href="/toy/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/toy/delete/{{ _id }}"
            onclick="return confirm('Are you sure to delete this toy ?');">Delete</a>
      </td>
   </tr>
   {{/each}}

</table>