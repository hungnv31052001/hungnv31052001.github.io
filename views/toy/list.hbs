<div class="card">
   <div class="row">
      {{#each toys }}
      <div class="col-md-3">
         <a href="/toy/detail/{{_id}}">
            <img class="card-img-top" src="{{ illustration }}" width="300" height="300">
         </a>
         <div class="card-body">
            <h5 class="card-title">{{ name }}</h5>
         </div>
      </div>
      {{/each}}
   </div>
</div>