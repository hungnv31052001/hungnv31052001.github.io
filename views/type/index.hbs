<center>
   <a class="btn btn-primary" href="/type/add">Add new type</a>
   <a class="btn btn-success" href="/type/deleteall"
      onclick="return confirm('Are you sure to delete all types ?');">Delete all types</a>
</center>
<br>

<div class="container col-md-6">
   <table class="table table-striped">
      <tr>
         <th>Type Name</th>
         <th>Quantity</th>
         <th>Actions</th>
      </tr>
      {{#each typeList }}
      <tr>
         <td>{{ name }}</td>
         <td>{{ quantity }}</td>
         <td>
            <a class="btn btn-success" href="/type/edit/{{ _id }}">Edit</a>
            <a class="btn btn-success" href="/type/delete/{{ _id }}" onclick="return confirm('Do you want to delete this type ?');">Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>